<div class="d-flex justify-content-center align-items-center">
  <div class="card">
    <h4 class="text-center">Đăng nhập</h4>
    <hr />
    <form>
      <div class="form-group">
        <label for="name">Email</label>
        <input type="email" class="form-control" id="name" placeholder="Nhập email" />
      </div>
      <div class="form-group">
        <label for="address">Mật khẩu</label>
        <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu của bạn" />
      </div>
      <a href="#" data-toggle="modal" data-target="#exampleModalCenter">
        Quên mật khẩu
      </a>
      <hr />
      <button class="btn btn-primary">Đăng nhập</button>
      <br />
      <a href="#">Chưa có tài khoản</a>
    </form>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">
          Quên mật khẩu
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="email">Email của bạn</label>
            <input type="email" class="form-control" placeholder="Nhập email của bạn" />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Hủy
        </button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">
          Gửi
        </button>
      </div>
    </div>
  </div>
</div>
<section class="d-flex justify-content-center">
  <div class="paper w-50">
    <h5><span>Thông tin tài khoản</span></h5>
    {{#if flash}}
    <hr>
    {{#each flash}}
    <div class="alert alert-danger" role="alert">
      {{this}}
    </div>
    {{/each}}
    {{/if}}
    <hr />
    <form data-parsley-validate="" method="POST" action="/api/updateProfile">
      <div class="form-group">
        <label for="address">Họ tên</label>
        <input type="text" class="form-control" name="name" value="{{user.fullname}}" required="" />
      </div>
      <div class="form-group">
        <label for="name">Email</label>
        <input type="email" class="form-control" value="{{user.email}}" disabled />
      </div>
      <div class="form-group">
        <label for="name">Số điện thoại</label>
        <input type="text" class="form-control" name="phone" value="{{user.phone}}" data-parsley-type="digits"
          data-parsley-minlength="10" data-parsley-maxlength="10" data-parsley-trigger="keyup"
          data-parsley-error-message="Số điện thoại không hợp lệ." />
      </div>
      <div class="form-group">
        <label for="address">Giới tính</label>
        {{#if user.gender}}
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" value="0" />
          <label class="form-check-label" for="male">
            Nam
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" value="1" checked />
          <label class="form-check-label" for="female">
            Nữ
          </label>
        </div>
        {{else}}
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" value="0" checked />
          <label class="form-check-label" for="male">
            Nam
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" value="1" />
          <label class="form-check-label" for="female">
            Nữ
          </label>
        </div>
        {{/if}}
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="checkbox" />
        <label class="form-check-label" for="changePassword">
          Thay đổi mật khẩu
        </label>
      </div>
      <hr>
      <button type="submit" class="btn btn-warning text-light">Cập nhật thông tin</button>
    </form>
  </div>
  <div class="paper w-25" id="changePassword" hidden>
    <h5><span>Đổi mật khẩu</span></h5>
    <hr>
    <form data-parsley-validate="" method="POST" action="/api/updatePassword">
      <div class="form-group">
        <label for="pasword">Mật khẩu cũ</label>
        <input type="password" class="form-control" name="oldpass" data-parsley-minlength="8"
          data-parsley-error-message="Mật khẩu phải chứa ít nhất 8 ký tự" required=""
          placeholder="Nhập mật khẩu của bạn" />
      </div>
      <div class="form-group">
        <label for="pasword">Mật khẩu mới</label>
        <input type="password" class="form-control" name="newpass" id="newpass" data-parsley-minlength="8"
          data-parsley-error-message="Mật khẩu phải chứa ít nhất 8 ký tự" required=""
          placeholder="Nhập mật khẩu của bạn" />
      </div>
      <div class="form-group">
        <label for="pasword">Nhập lại mật khẩu</label>
        <input type="password" class="form-control" data-parsley-equalto="#newpass" required=""
          data-parsley-error-message="Mật khẩu không trùng khớp." placeholder="Nhập lại mật khẩu của bạn" />
      </div>
      <hr>
      <button class="btn btn-warning text-light" type="submit">Đổi mật khẩu</button>
      <button class="btn" type="reset" onclick="hideChangePassword()">Hủy</button>
    </form>
  </div>
</section>
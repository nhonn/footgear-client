<section class="d-flex justify-content-center align-items-center">
  <div class="paper col-md-3 col-sm-7">
    <h4>Thông tin tài khoản</h4>
    <hr />
    <form>
      <div class="form-group">
        <label for="address">Họ tên</label>
        <input type="text" class="form-control" name="name" value="{{user.fullname}}" />
      </div>
      <div class="form-group">
        <label for="name">Email</label>
        <input type="email" class="form-control" value="{{user.email}}" disabled />
      </div>
      <div class="form-group">
        <label for="address">Giới tính</label>
        {{#if user.gender}}
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" value="male" />
          <label class="form-check-label" for="male">
            Nam
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" value="female" checked />
          <label class="form-check-label" for="female">
            Nữ
          </label>
        </div>
        {{else}}
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" value="male" checked />
          <label class="form-check-label" for="male">
            Nam
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" value="female" />
          <label class="form-check-label" for="female">
            Nữ
          </label>
        </div>
        {{/if}}
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="checkbox" />
        <label class="form-check-label" for="changePassword">
          Thay đổi mật khẩu
        </label>
      </div>
      <div id="changePassword" hidden>
        <hr />
        <div class="form-group">
          <label for="address">Mật khẩu cũ</label>
          <input type="password" class="form-control" name="oldPass" placeholder="Nhập mật khẩu cũ" />
        </div>
        <div class="form-group">
          <label for="address">Mật khẩu mới</label>
          <input type="password" class="form-control" name="newPass" placeholder="Nhập mật khẩu mới" />
        </div>
        <div class="form-group">
          <label for="address">Nhập lại mật khẩu </label>
          <input type="password" class="form-control" name="rePass" placeholder="Nhập lại mật khẩu mới" />
        </div>
        <hr />
      </div>
      <hr>
      <button type="submit" class="btn btn-warning" onclick="editProfile()">Cập nhật thông tin</button>
    </form>
  </div>
</section>
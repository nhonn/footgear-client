<div class="d-flex justify-content-center align-items-center">
  <div class="card w-50">
    <h4>Thông tin tài khoản</h4>
    <hr />
    <form>
      <div class="form-group">
        <label for="address">Họ tên</label>
        <input type="text" class="form-control" id="name" value="Nguyen Van A" />
      </div>
      <div class="form-group">
        <label for="name">Email</label>
        <input type="email" class="form-control" id="email" value="dayla@email.com" disabled />
      </div>
      <div class="form-group">
        <label for="address">Giới tính</label>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" id="maleGender" value="male" checked />
          <label class="form-check-label" for="maleGender">
            Nam
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" id="femaleGender" value="female" />
          <label class="form-check-label" for="femaleGender">
            Nữ
          </label>
        </div>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="checkbox" />
        <label class="form-check-label" for="changePassword">
          Thay đổi mật khẩu
        </label>
      </div>
      <div id="#changePassword">
        <hr />
        <div class="form-group">
          <label for="address">Mật khẩu cũ</label>
          <input type="password" class="form-control" id="oldPass" placeholder="Nhập mật khẩu cũ" />
        </div>
        <div class="form-group">
          <label for="address">Mật khẩu mới</label>
          <input type="password" class="form-control" id="newPass" placeholder="Nhập mật khẩu mới" />
        </div>
        <div class="form-group">
          <label for="address">Nhập lại</label>
          <input type="password" class="form-control" id="rePass" placeholder="Nhập lại mật khẩu mới" />
        </div>
        <hr />
      </div>
      <button class="btn btn-secondary">Cập nhật</button>
    </form>
  </div>
</div>
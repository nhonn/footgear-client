<div class="d-flex justify-content-center align-items-center">
  <div class="paper">
    <h4 class="text-center">Đăng ký</h4>
    <hr />
    <form method="post" action="/api/signup" enctype="application/x-www-form-urlencoded">
      <div class="form-group">
        <label for="name">Họ tên</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Họ và tên" />
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email" />
      </div>
      <div class="form-group">
        <label for="pasword">Mật khẩu</label>
        <input type="password" class="form-control" id="password" name="pass1" placeholder="Nhập mật khẩu của bạn" />
      </div>
      <div class="form-group">
        <label for="pasword">Nhập lại mật khẩu</label>
        <input type="password" class="form-control" id="repassword" name="pass2"
          placeholder="Nhập lại mật khẩu của bạn" />
      </div>
      <hr />
      <div class="d-flex justify-content-between">
        <a class="btn btn-default" href="/tai-khoan/dang-nhap">Đăng nhập</a>
        <input type="submit" value="Đăng ký" class="btn btn-success"></input>
      </div>
  </div>
</div>
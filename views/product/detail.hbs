<div class="row">
  <div class="col-6">
    <div class="owl-carousel owl-theme" id="banner">
      <div class="item"><img src={{item.imgs}} /></div>
    </div>
  </div>
  <div class="col-6" style="margin-top: 15px;">
    <h5>{{item.name}}</h5>
    Thương hiệu: <a href="/category">{{item.brand}}</a>
    <hr />
    <h6 style="color: red;">{{item.price}}</h6>
    <hr />
    {{item.description}}
    <hr />
    <div class="row">
      <div class="col-2">
        Kích cỡ:
      </div>
      <div class="col-3">
        <select class="form-control">
          {{#each item.size}}
          <option>{{this}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <br />
    <a class="btn btn-primary" href="/cart">Thêm vào giỏ hàng</a>
  </div>
</div>
<br />
<div class="card" hidden>
  Đánh giá
  <hr />
</div>